[Unit]
Description=LetsEncrypt Renew Script
After=network-online.target
Wants=network-online.target

[Service]
ExecStartPost=/bin/systemctl reload nginx.service
ExecStart=/usr/local/bin/lego_linux_amd64 -a -s {{ lego_server }} -d={{ fqdn }} -m={{ lego_email }} --dns cloudflare --path=/storage/lego/ renew
Type=simple
Restart=on-failure
RestartSec=10s
PrivateTmp=yes
Environment=CLOUDFLARE_EMAIL={{ cf_api_email }}
Environment=CLOUDFLARE_API_KEY={{ cf_api_key }}
